<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="loginEdit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp50</item>
        <item name="android:textSize">@dimen/font_size_16</item>
    </style>

    <style name="loginButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp45</item>
        <item name="android:textSize">@dimen/font_size_16</item>
        <item name="android:textColor">@color/withe</item>
        <item name="android:background">@drawable/ripple_btn</item>
    </style>

    <style name="itemPostTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp40</item>
        <item name="android:layout_marginTop">160dp</item>
        <item name="android:gravity">bottom</item>
        <item name="android:paddingStart">@dimen/dp16</item>
        <item name="android:paddingEnd">@dimen/dp16</item>
        <item name="android:textColor">@color/withe</item>
        <item name="android:textSize">@dimen/font_size_18</item>
        <item name="android:background">@color/black80</item>
        <item name="android:paddingBottom">@dimen/dp05</item>
    </style>

    <style name="itemPostContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dp200</item>
        <item name="android:padding">@dimen/dp16</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_size_14</item>
    </style>

    <style name="itemPostPhoto">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp200</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="itemPostActionText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/dp10</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:textSize">@dimen/font_size_14</item>
    </style>
</resources>
