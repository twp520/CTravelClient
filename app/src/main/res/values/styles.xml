<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>


    <style name="loginEdit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp50</item>
        <item name="android:textSize">@dimen/font_size_16</item>
    </style>


    <style name="loginButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp45</item>
        <item name="android:textSize">@dimen/font_size_16</item>
        <item name="android:textColor">@color/withe</item>
        <item name="android:layout_marginEnd">@dimen/dp16</item>
        <item name="android:layout_marginStart">@dimen/dp16</item>
        <item name="android:background">@drawable/ripple_btn</item>
    </style>

    <style name="itemPostTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp60</item>
        <item name="android:layout_marginTop">110dp</item>
        <item name="android:gravity">bottom</item>
        <item name="android:paddingStart">@dimen/dp16</item>
        <item name="android:paddingEnd">@dimen/dp16</item>
        <item name="android:textColor">@color/withe</item>
        <item name="android:textSize">@dimen/font_size_18</item>
        <item name="android:background">@color/black80</item>
        <item name="android:paddingBottom">@dimen/dp05</item>
    </style>

    <style name="itemPostUserTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dp170</item>
        <item name="android:padding">@dimen/dp16</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:focusable">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:textSize">@dimen/font_size_16</item>
    </style>

    <style name="itemPostContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dp210</item>
        <item name="android:padding">@dimen/dp16</item>
        <item name="android:lines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/font_size_14</item>
    </style>

    <style name="itemPostPhoto">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp170</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="itemPostActionText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/dp10</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:textSize">@dimen/font_size_14</item>
    </style>

    <style name="pagePadding">
        <item name="android:layout_marginEnd">@dimen/dp16</item>
        <item name="android:layout_marginStart">@dimen/dp16</item>
    </style>

    <style name="postInput" parent="pagePadding">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp60</item>
    </style>

    <style name="postInput.Haf" parent="pagePadding">
        <item name="android:layout_width">@dimen/dp150</item>
        <item name="android:layout_height">@dimen/dp60</item>
        <item name="android:layout_marginTop">@dimen/dp10</item>
    </style>

    <style name="postInputEdit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="pagePadding.Warp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="pagePadding.MatchWarp">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="pagePadding.MatchMatch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="spinnerItemStyle">

    </style>
</resources>
